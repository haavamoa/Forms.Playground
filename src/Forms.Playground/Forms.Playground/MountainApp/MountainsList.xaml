<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Models="clr-namespace:Forms.Playground.Models;assembly=Forms.Playground"
             mc:Ignorable="d"
             x:Class="Forms.Playground.MountainApp.MountainsList">
    <ScrollView>
        <StackLayout>
            <BindableLayout.ItemsSource>
                <x:Array Type="{x:Type Models:Mountain}">
                    <Models:Mountain Name="Galdhøpiggen"
                                     Altitude="2469" />
                    <Models:Mountain Name="Trollsteinseggi"
                                     Altitude="2300" />
                    <Models:Mountain Name="Tverrbottindene"
                                     Altitude="216" />
                    <Models:Mountain Name="Puttegga"
                                     Altitude="1999" />
                    <Models:Mountain Name="Kyrkja"
                                     Altitude="2032" />
                    <Models:Mountain Name="Kyrkja"
                                     Altitude="2032" />
                    <Models:Mountain Name="Borja"
                                     Altitude="360" />
                    <Models:Mountain Name="Knitten"
                                     Altitude="158" />
                    <Models:Mountain Name="Smedsnit"
                                     Altitude="600" />
                </x:Array>
            </BindableLayout.ItemsSource>
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="Models:Mountain">
                    <Frame CornerRadius="20"
                           BorderColor="#364058"
                           BackgroundColor="Transparent">
                        <Frame.Resources>
                            <Style TargetType="Label">
                                <Setter Property="TextColor"
                                        Value="WhiteSmoke" />
                            </Style>
                        </Frame.Resources>
                        <Grid RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Label Text="{Binding Name}"
                                   Grid.Column="0"
                                   d:Grid.Row="0"
                                   VerticalOptions="CenterAndExpand"
                                   FontSize="Medium" />
                            <Label Grid.Column="0"
                                   Grid.Row="1"
                                   VerticalOptions="CenterAndExpand"
                                   Text="{Binding Altitude, StringFormat='{0} m'}" />

                        </Grid>

                    </Frame>
                </DataTemplate>
            </BindableLayout.ItemTemplate>

        </StackLayout>
    </ScrollView>
</ContentView>